---
import Container from "../components/Container.astro";
import Page from "../layouts/Page.astro";
import { Service } from "../components/rubrique"
import ContactForm from "../components/form-contact";
import ContactFormulaire from "../components/ContactFormulaire.astro";

---

<style>
    .header-subtitle {
        @apply w-full lg:w-[50%] px-6 lg:px-0;
    }

    .service {
        @apply grid grid-cols-2 lg:grid-cols-4 gap-4 lg:gap-[36px] px-6 lg:px-0;
    }
    .formation {
        @apply col-span-2 lg:col-span-4 bg-turquase flex flex-col lg:flex-row p-16 rounded-xl;
    }
</style>

<Page>
    <section class="pt-[92px] pb-[64px]">
        <Container>
            <div class="h-[250px] flex justify-center flex-col">
                <div class="px-6 lg:px-0 font-bold text-[64px] text-[#003A74]" style="line-height: 1.1;">
                    En Somme
                </div>
                <div class="header-subtitle">
                    Bytes-Corp, société camerounaise d'ingénierie informatique, offre des solutions sur mesure et évolutives pour PME, PMI, TPE et professions libérales. Nous allions innovation et pragmatisme pour répondre aux besoins technologiques actuels et futurs tout en optimisant les coûts.
                </div>
            </div>
        </Container>
    </section>
    <section>
        <Container>
            <div class="service">
                <Service client:load />
                <div class="formation">
                    <div class = "w-full lg:w-[338px] mb-6 lg:mb-0">
                        <img src="/Group_microsoft.png" alt="Group_microsoft">
                    </div>
                    <div class="flex-1 flex items-center justify-center">
                        <h1 class="w-full lg:w-[70%] font-bold text-xl lg:text-[40px] text-center" style="line-height: 1.2;">Un perfectionnement dans l’utilisation des outils professionnels Microsoft.</h1>
                    </div>
                </div>
            </div>
            <div class = "mt-[78px] ">
				<div class="px-6 lg:px-0 text-3xl lg:text-[48px] font-extrabold text-[#003A74]">
					Passez à l’action
				</div>
                <div class="flex flex-col-reverse lg:flex-row items-start w-full pt-10">
                    <div class="w-full lg:w-[400px] hidden lg:flex justify-center lg:h-[350px] border-r ">
                        <div>
                            <div class="flex gap-2">
                                <div class="w-[52px] aspect-square flex items-center justify-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"><path fill="currentColor" d="M19.938 8H21a2 2 0 0 1 2 2v4a2 2 0 0 1-2 2h-1.062A8 8 0 0 1 12 23v-2a6 6 0 0 0 6-6V9A6 6 0 0 0 6 9v7H3a2 2 0 0 1-2-2v-4a2 2 0 0 1 2-2h1.062a8.001 8.001 0 0 1 15.876 0M3 10v4h1v-4zm17 0v4h1v-4zM7.76 15.785l1.06-1.696A5.97 5.97 0 0 0 12 15a5.97 5.97 0 0 0 3.18-.911l1.06 1.696A7.96 7.96 0 0 1 12 17a7.96 7.96 0 0 1-4.24-1.215"/></svg>
                                </div>
                                <div class="flex-1 pt-3">
                                    <strong class="block">Téléphone:</strong>
                                    <span class="block">680 80 80 56</span>
                                </div>
                            </div>
                            <div class="flex gap-2">
                                <div class="w-[52px] aspect-square flex items-center justify-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"><path fill="currentColor" d="M20 12a8 8 0 1 0-3.562 6.657l1.11 1.664A9.95 9.95 0 0 1 12 22C6.477 22 2 17.523 2 12S6.477 2 12 2s10 4.477 10 10v1.5a3.5 3.5 0 0 1-6.396 1.966A5 5 0 1 1 15 8h2v5.5a1.5 1.5 0 0 0 3 0zm-8-3a3 3 0 1 0 0 6a3 3 0 0 0 0-6"/></svg>
                                </div>
                                <div class="flex-1 pt-3">
                                    <strong class="block">Contact Mail:</strong>
                                    <span class="block">contact@bytes-corp.com</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- <ContactForm client:load /> -->
                     <ContactFormulaire />
                </div>
			</div>
            <div class="h-[100px]"></div>
        </Container>
    </section>
</Page>