<Page>
    <section class="bg-center bg-no-repeat bg-cover h-[450px]" style="background-image:url(/background_bytes.jpeg)">
        <div class="h-full flex items-center bg-[#0004]">
            <Container>
                <div class="text-4xl lg:text-6xl text-white font-extrabold">A propos de nous ?</div>
            </Container>
        </div>
