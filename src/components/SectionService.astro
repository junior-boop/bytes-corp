---
import Container from "./Container.astro";


---

<style>
    .line1{
        left: -100px;
    }
    .line2{
        left: -1200px;
    }

    .screen {
        @apply scale-105 rotate-[3deg];
    }

    .btn-bytes {
        position : relative;
        z-index: 5
    }

    .btn-bytes::before {
        content: '';
        position: absolute;

        width: 42px;
        aspect-ratio: 1/1;
        z-index: -1;
        transition: all ease-in-out .3s;
        @apply bg-turquase rounded-full;
    }
    .btn-bytes.white::before {
        content: '';
        @apply bg-white rounded-full;
    }

    .btn-bytes:hover::before {
        width: 62px;
        aspect-ratio: 1/1;
    }

    .service {
        @apply w-[302px] h-[420px] shadow-lg rounded-xl border flex items-center justify-center;
    }
</style>

<section class="py-[100px] overflow-hidden relative flex items-center h-[1000px] mb-10">
    <div class="screen overflow-hidden absolute z-0">
        <div class="line1 flex items-center relative">
           <div class="py-5 px-2"><div class = "service"><img src="/Frame.png" alt=""></div></div>
