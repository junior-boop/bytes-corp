<script>
// import gsap from "../libs/gsap";
    // @ts-ignore
    gsap.registerPlugin(ScrollTrigger)

    gsap.to('.line1', {
        scrollTrigger : {
            trigger : '.line1',
            start: 'top bottom',
            end : "bottom top",
            toggleActions : "play pause resume reverse",
            scrub : 1
        },
        x : -1200,
        duration : 4,

    });
    gsap.to('.line2', {
        scrollTrigger : {
            trigger : '.line2',
            start: 'top bottom',
            end : "bottom top",
            toggleActions : "play pause resume reverse",
            scrub : 1
        },
        x : 500,
        duration : 4,

    })


</script>